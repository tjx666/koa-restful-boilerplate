        "type": "git"
    },
    "private": true,
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon",
        "test": "cross-env NODE_ENV=test mocha",
        "lint": "eslint -c .eslintrc --ext .js ./{src,test}/**/*.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn run test"
